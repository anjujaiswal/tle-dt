
QUESTION 1-https://www.codechef.com/LRNDSA02/problems/STUPMACH?tab=statement


#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main() {
	// your code goes here
	ll t; cin>>t;
	while(t--){
	    ll n;cin>>n;
	    vector<ll> v(n),m(n);
	     ll k = INT_MAX;
	    for(ll i = 0; i<n;i++){
	        ll a ;cin>>a;//cout<<a<<"&&";
	        v.push_back(a);
	        if(i == 0) m[0] = a;
	        else m[i] = min(m[i-1],a);
	    }
	   // for(auto i:m)cout<<i<<"--";
	    ll ans = 0; ll z = 0;
	    for(ll i = n-1;i>=0;i--){
	        if(m[i]>z){
	            ans += (m[i]-z)*(i+1);
	            z+=(m[i]-z);//cout<<"z->"<<z;
	        }
	    }
	
	 cout<<ans<<endl;
	}
	return 0;
}
